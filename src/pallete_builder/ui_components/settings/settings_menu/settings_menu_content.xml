            </Div>
            <Div layout='11'>
            </Div>
            <Div layout='12'>
              <Button
                type="TilingButton"
                asset="3x3_tilable_button_on_background.png"
                position="b:0"
                frame_id='0'
                hover_frame_id='1'
                click_frame_id='2'
                event_id='101'
                >
                <Div padding="t:5,b:3,l:10,r:10">
                  <Text>
                    Save Settings
                  </Text>
                </Div>
              </Button>
            </Div>
          </Grid>
        </Div>
        <Div set="Save / Load">
        </Div>
        <Div set="Controls">
          <Div position="t:-20">
            <Text position="t:0,l:0">
              LMB: Left Mouse Button / RMB: Right Mouse Button / MMB: Middle Mouse Button
            </Text>
          </Div>
          <Grid
            size="x:680,y:400"
            pagination_size="x:4,y:6"
            grid_layout="x:4,y:6">
            <Div info="draw">
              <Image type="Icon" position="l:0" name="pencil"/>
              <Text position="l:35">
                : LMB
              </Text>
            </Div>
            <Div info="eyedropper">
              <Image type="Icon" position="l:0" name="eye_dropper"/>
              <Text position="l:35">
                : CTRL + LMB
              </Text>
            </Div>
            <Div info="zoom">
              <Image type="Icon" position="l:0" name="magnify_lens"/>
              <Text position="l:35">
                : Scroll
              </Text>
            </Div>
            <Div info="save">
              <Image type="Icon" position="l:0" name="save"/>
              <Text position="l:35">
                : CTRL + S
              </Text>
            </Div>
            <Div info="move">
              <Image type="Icon" position="l:0" name="cross_arrow"/>
              <Text position="l:35">
                : RMB or MMB
              </Text>
            </Div>
            <Div info="reset_grid">
              <Image type="Icon" position="l:0" name="reset"/>
              <Text position="l:35">
                : Space
              </Text>
            </Div>
            <Div info="undo">
              <Image type="Icon" position="l:0" name="curve_reverse_arrow"/>
              <Text position="l:35">
                : CTRL + Z
              </Text>
            </Div>             
            <Div info="redo">
              <Image type="Icon" position="l:0" name="curve_forward_arrow"/>
              <Text position="l:35">
                : CTRL + R
              </Text>
            </Div>
            <Div info="erase">
              <Image type="Icon" position="l:0" name="erase"/>
              <Text position="l:35">
                : E
              </Text>
            </Div>
          </Grid>
        </Div>
      </Sets>
    </Div>
  </Background>
