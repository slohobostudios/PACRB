  <Background
    type="Repeatable3x3Background"
    asset="dark_blue_background.png"
    frame_id="0">
    <Div scale="2" size="x:800,y:500">
      <Button
        type="ImageButton"
        asset="x_button.png"
        position="t:10,r:10"
        frame_id="0"
        hover_frame_id="1"
        click_frame_id="2"
        event_id="2"/>

      <Grid
        position="l:-4"
        size="x:100,y:400"
        pagination_size="x:1,y:4"
        grid_layout="x:1,y:4">
